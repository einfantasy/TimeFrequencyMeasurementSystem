<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TimeFrequencyMeasurementSystem"
        xmlns:System="clr-namespace:System;assembly=mscorlib" x:Class="TimeFrequencyMeasurementSystem.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="749">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <ToolBar x:Name="toolBar" Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Top">
            <Button x:Name="BtnOpen" Content="打开" />
            <Button x:Name="BtnSave" Content="保存" />
            <Button x:Name="BtnSaveAs" Content="另存为" />
            <Button x:Name="BtnExport" Content="生成报告" Click="BtnExport_Click" />
        </ToolBar>
        <TabControl Grid.Row="1">
            <TabItem x:Name="TabPage1" Header="频率计数">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="160" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <GroupBox Grid.Column="0" Header="测试方法">
                        <TextBox Text="测试方法&#xA;1、连接10MHz输出&#xA;2、参考源输入" 
                                 HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" TextWrapping="Wrap"/>
                    </GroupBox>
                    <GroupBox Grid.Column="1" Header="测试数据记录">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="50" />
                            </Grid.RowDefinitions>
                            <DataGrid Name="dataGridFrequencyCount" Grid.Row="0" ItemsSource="{Binding LstFrequencyCount}" AutoGenerateColumns="False">
                                <DataGrid.ContextMenu>
                                    <ContextMenu Name="dgMenuFrequencyCount" StaysOpen="true">
                                        <MenuItem Name="ItmFrequencyCountRemove" Header="删除" Click="ItmFrequencyCountRemove_Click" />
                                    </ContextMenu>
                                </DataGrid.ContextMenu>
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="记录时间" Width="*" Binding="{Binding Now, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True"/>
                                    <DataGridTextColumn Header="频率" Width="*" Binding="{Binding Frequency, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True"/>
                                </DataGrid.Columns>
                            </DataGrid>                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                         
                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="100" />
                                    <ColumnDefinition Width="100" />
                                </Grid.ColumnDefinitions>
                                <Button x:Name="BtnRunApp1" Grid.Column="1" Content="运行测试程序" Width="80" Height="30" 
                                        HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,10,10,10" />
                                <Button x:Name="BtnAddRecord1" Grid.Column="2" Content="添加测试记录" Width="80" Height="30" 
                                        HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,10,10,10" Click="BtnAddRecord1_Click"/>
                            </Grid>
                        </Grid>
                    </GroupBox>
                </Grid>
            </TabItem>
            <TabItem x:Name="TabPage2" Header="开机特性">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="160" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <GroupBox Grid.Column="0" Header="测试方法">
                        <TextBox Text="测试方法&#xA;1、输入铷频标开机一段时间时的频率 &#xA;2、输入达到稳定时的频率" TextWrapping="Wrap" 
                                 HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"/>
                    </GroupBox>
                    <GroupBox Grid.Column="1" Header="测试数据记录">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="50" />
                            </Grid.RowDefinitions>
                            <DataGrid Name="dataGridBootFeature" Grid.Row="0" ItemsSource="{Binding LstBootFeature}" AutoGenerateColumns="False">
                                <DataGrid.ContextMenu>
                                    <ContextMenu Name="dgMenuBootFeature" StaysOpen="true">
                                        <MenuItem Name="ItmBootFeatureRemove" Header="删除" Click="ItmBootFeatureRemove_Click"/>
                                    </ContextMenu>
                                </DataGrid.ContextMenu>
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="记录时间" Width="*" Binding="{Binding Now, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True"/>
                                    <DataGridTextColumn Header="开机频率fta" Width="*" Binding="{Binding FrequencyBoot, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True"/>
                                    <DataGridTextColumn Header="稳定频率ftw" Width="*" Binding="{Binding FrequencyStable, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True"/>
                                    <DataGridTextColumn Header="标称频率f0" Width="*" Binding="{Binding FrequencyStandard, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True"/>
                                    <DataGridTextColumn Header="开机特性V" Width="*" Binding="{Binding BootFeature, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True"/>
                                </DataGrid.Columns>
                            </DataGrid>
                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="100" />
                                    <ColumnDefinition Width="100" />
                                </Grid.ColumnDefinitions>
                                <Button x:Name="BtnRunApp2" Grid.Column="1" Content="运行测试程序" Width="80" Height="30" 
                                        HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,10,10,10" />
                                    <Button x:Name="BtnAddRecord2" Grid.Column="2" Content="添加测试记录" Width="80" Height="30" 
                                        HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,10,10,10" Click="BtnAddRecord2_Click"/>
                            </Grid>
                        </Grid>
                    </GroupBox>
                </Grid>
            </TabItem>
            <TabItem x:Name="TabPage3" Header="相位噪声">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="160" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <GroupBox Grid.Column="0" Header="测试方法">
                        <TextBox Text="测试方法&#xA;1、操作软件切换到3120计数功能&#xA;2、手动记录频率数值" TextWrapping="Wrap"
                                 HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"/>
                    </GroupBox>
                    <GroupBox Grid.Column="1" Header="测试数据记录">
                        <TabControl>
                            <TabItem x:Name="TabSubPage1" Header="频率">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="50" />
                                    </Grid.RowDefinitions>
                                    <DataGrid Name="dataGridPhaseNoise" Grid.Row="0" ItemsSource="{Binding LstPhaseNoise}" AutoGenerateColumns="False">
                                        <DataGrid.ContextMenu>
                                            <ContextMenu Name="dgMenuPhaseNoise" StaysOpen="true">
                                                <MenuItem Name="ItmPhaseNoiseRemove" Header="删除" Click="ItmPhaseNoiseRemove_Click"/>
                                            </ContextMenu>
                                        </DataGrid.ContextMenu>
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="记录时间" Width="*" Binding="{Binding Now, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True"/>
                                            <DataGridTextColumn Header="频率偏移" Width="*" Binding="{Binding FrequencyOffset, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True"/>
                                            <DataGridTextColumn Header="噪声" Width="*" Binding="{Binding Noise, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True"/>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                    <Grid Grid.Row="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="100" />
                                            <ColumnDefinition Width="100" />
                                        </Grid.ColumnDefinitions>
                                        <Button x:Name="BtnRunApp3" Grid.Column="1" Content="运行测试程序" Width="80" Height="30" 
                                        HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,10,10,10" />
                                        <Button x:Name="BtnAddRecord3" Grid.Column="2" Content="添加测试记录" Width="80" Height="30" 
                                        HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,10,10,10" Click="BtnAddRecord3_Click"/>
                                    </Grid>
                                </Grid>
                            </TabItem>
                            <TabItem x:Name="TabSubPage2" Header="截图">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="50" />
                                    </Grid.RowDefinitions>
                                    <Image Name="Img1" />
                                    <Grid Grid.Row="1">
                                        <Button x:Name="BtnPrintScreen1" Content="截图" Width="80" Height="30" 
                                        HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,10,10,10"/>
                                    </Grid>
                                </Grid>
                            </TabItem>
                        </TabControl>
                    </GroupBox>
                </Grid>
            </TabItem>
            <TabItem x:Name="TabPage4" Header="短期稳定度">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="160" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <GroupBox Grid.Column="0" Header="测试方法">
                        <TextBox Text="测试方法&#xA;1、操作软件切换到3120计数功能&#xA;2、手动记录频率数值" TextWrapping="Wrap"
                                 HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"/>
                    </GroupBox>
                    <GroupBox Grid.Column="1" Header="测试数据记录">
                        <TabControl>
                            <TabItem x:Name="TabSubPage3" Header="频率">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="50" />
                                    </Grid.RowDefinitions>
                                    <DataGrid Name="dataGridShortTermStability" Grid.Row="0" ItemsSource="{Binding LstShortTermStability}" AutoGenerateColumns="False">
                                        <DataGrid.ContextMenu>
                                            <ContextMenu Name="dgMenuShortTermStability" StaysOpen="true">
                                                <MenuItem Name="ItmShortTermStabilityRemove" Header="删除" Click="ItmShortTermStabilityRemove_Click"/>
                                            </ContextMenu>
                                        </DataGrid.ContextMenu>
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="记录时间" Width="*" Binding="{Binding Now, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True"/>
                                            <DataGridTextColumn Header="稳定时间" Width="*" Binding="{Binding Tau, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True"/>
                                            <DataGridTextColumn Header="稳定度" Width="*" Binding="{Binding Sigma, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True"/>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                    <Grid Grid.Row="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="100" />
                                            <ColumnDefinition Width="100" />
                                        </Grid.ColumnDefinitions>
                                        <Button x:Name="BtnRunApp4" Grid.Column="1" Content="运行测试程序" Width="80" Height="30" 
                                        HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,10,10,10" />
                                        <Button x:Name="BtnAddRecord4" Grid.Column="2" Content="添加测试记录" Width="80" Height="30" 
                                        HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,10,10,10" Click="BtnAddRecord4_Click"/>
                                    </Grid>
                                </Grid>
                            </TabItem>
                            <TabItem x:Name="TabSubPage4" Header="截图">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="50" />
                                    </Grid.RowDefinitions>
                                    <Image Name="Img2" />
                                    <Grid Grid.Row="1">
                                        <Button x:Name="BtnPrintScreen2" Content="截图" Width="80" Height="30" 
                                        HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,10,10,10"/>
                                    </Grid>
                                </Grid>
                            </TabItem>
                        </TabControl>
                    </GroupBox>
                </Grid>
            </TabItem>
            <TabItem x:Name="TabPage5" Header="频率准确度">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="160" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <GroupBox Grid.Column="0" Header="测试方法">
                        <TextBox Text="测试方法&#xA;1、时频综合测试设备切换到频率计数功能&#xA;2、次开机测量，记录频率值" TextWrapping="Wrap"
                                 HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"/>
                    </GroupBox>
                    <GroupBox Grid.Column="1" Header="测试数据记录">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="50" />
                            </Grid.RowDefinitions>
                            <DataGrid Name="dataGridFrequencyAccuracy" Grid.Row="0" ItemsSource="{Binding LstFrequencyAccuracy}" AutoGenerateColumns="False">
                                <DataGrid.ContextMenu>
                                    <ContextMenu Name="dgMenuFrequencyAccuracy" StaysOpen="true">
                                        <MenuItem Name="ItmFrequencyAccuracyRemove" Header="删除" Click="ItmFrequencyAccuracyRemove_Click"/>
                                    </ContextMenu>
                                </DataGrid.ContextMenu>
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="记录时间" Width="*" Binding="{Binding Now, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True"/>
                                    <DataGridTextColumn Header="频率标称值" Width="*" Binding="{Binding FrequencyStandard, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True"/>
                                    <DataGridTextColumn Header="频率实际值" Width="*" Binding="{Binding FrequencyActual, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True"/>
                                    <DataGridTextColumn Header="频率准确度" Width="*" Binding="{Binding FrequencyAccuracy, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True"/>
                                </DataGrid.Columns>
                            </DataGrid>
                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="100" />
                                    <ColumnDefinition Width="100" />
                                </Grid.ColumnDefinitions>
                                <Button x:Name="BtnRunApp5" Grid.Column="1" Content="运行测试程序" Width="80" Height="30" 
                                        HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,10,10,10" />
                                <Button x:Name="BtnAddRecord5" Grid.Column="2" Content="添加测试记录" Width="80" Height="30" 
                                        HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,10,10,10" Click="BtnAddRecord5_Click"/>
                            </Grid>
                        </Grid>
                    </GroupBox>
                </Grid>
            </TabItem>
            <TabItem x:Name="TabPage6" Header="频率复现性">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="160" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <GroupBox Grid.Column="0" Header="测试方法">
                        <TextBox Text="测试方法&#xA;1、时频综合测试设备切换到频率计数功能&#xA;
2、铷频标工作一段时间t1后，测量频率f1&#xA;3、关机一段时间后t2后，再次开机一段时间t3，测量频率f2&#xA;4、频率复现性按 或按铷频标的产品说明书规定进行检定，测量f1和f2时，取样时间大于100s。" TextWrapping="Wrap"
                                 HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"/>
                    </GroupBox>
                    <GroupBox Grid.Column="1" Header="测试数据记录">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="50" />
                            </Grid.RowDefinitions>
                            <DataGrid Name="dataGridFrequencyReproducibility" Grid.Row="0" ItemsSource="{Binding LstFrequencyReproducibility}" AutoGenerateColumns="False">
                                <DataGrid.ContextMenu>
                                    <ContextMenu Name="dgMenuReproducibility" StaysOpen="true">
                                        <MenuItem Name="ItmFrequencyReproducibilityRemove" Header="删除" Click="ItmFrequencyReproducibilityRemove_Click"/>
                                    </ContextMenu>
                                </DataGrid.ContextMenu>
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="记录时间" Width="*" Binding="{Binding Now, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True"/>
                                    <DataGridTextColumn Header="频率值f1" Width="*" Binding="{Binding FrequencyI, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True"/>
                                    <DataGridTextColumn Header="频率值f2" Width="*" Binding="{Binding FrequencyII, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True"/>
                                    <DataGridTextColumn Header="频率标称值" Width="*" Binding="{Binding FrequencyStandard, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True"/>
                                    <DataGridTextColumn Header="频率复现性" Width="*" Binding="{Binding Reproducibility, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True"/>
                                </DataGrid.Columns>
                            </DataGrid>
                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="100" />
                                    <ColumnDefinition Width="100" />
                                </Grid.ColumnDefinitions>
                                <Button x:Name="BtnRunApp6" Grid.Column="1" Content="运行测试程序" Width="80" Height="30" 
                                        HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,10,10,10" />
                                <Button x:Name="BtnAddRecord6" Grid.Column="2" Content="添加测试记录" Width="80" Height="30" 
                                        HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,10,10,10" Click="BtnAddRecord6_Click"/>
                            </Grid>
                        </Grid>
                    </GroupBox>
                </Grid>
            </TabItem>
            <TabItem x:Name="TabPage7" Header="漂移率">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="160" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <GroupBox Grid.Column="0" Header="测试方法">
                        <TextBox Text="测试方法&#xA;1、时频综合测试设备切换到频率计数功能。&#xA;2、铷频标经预热1天后开始测量。&#xA;3、铷原子频标的漂移率共计量15天，每天取1个数（n=1），计15个数" TextWrapping="Wrap"
                                 HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"/>
                    </GroupBox>
                    <GroupBox Grid.Column="1" Header="测试数据记录">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="50" />
                            </Grid.RowDefinitions>
                            <DataGrid Name="dataGridDriftRate" Grid.Row="0" ItemsSource="{Binding LstDriftRateParam}" AutoGenerateColumns="False">
                                <DataGrid.ContextMenu>
                                    <ContextMenu Name="dgMenuDriftRate" StaysOpen="true">
                                        <MenuItem Name="ItmDriftRateRemove" Header="删除" Click="ItmDriftRateRemove_Click"/>
                                    </ContextMenu>
                                </DataGrid.ContextMenu>
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="记录时间" Width="*" Binding="{Binding Now, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True"/>
                                    <DataGridTextColumn Header="测试天数" Width="*" Binding="{Binding Days, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True"/>
                                    <DataGridTextColumn Header="输出频率" Width="*" Binding="{Binding Frequency, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True"/>
                                </DataGrid.Columns>
                            </DataGrid>
                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="100" />
                                    <ColumnDefinition Width="100" />
                                </Grid.ColumnDefinitions>
                                <Button x:Name="BtnCalculate1" Grid.Column="0" Content="计算结果" Width="80" Height="30" 
                                        HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,10,10,10" Click="BtnCalculate1_Click"/>
                                <Button x:Name="BtnRunApp7" Grid.Column="2" Content="运行测试程序" Width="80" Height="30" 
                                        HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,10,10,10" />
                                <Button x:Name="BtnAddRecord7" Grid.Column="3" Content="添加测试记录" Width="80" Height="30" 
                                        HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,10,10,10" Click="BtnAddRecord7_Click"/>
                            </Grid>
                        </Grid>
                    </GroupBox>
                </Grid>
            </TabItem>
            <TabItem x:Name="TabPage8" Header="日老化率">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="160" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <GroupBox Grid.Column="0" Header="测试方法">
                        <TextBox Text="测试方法&#xA;1、时频综合测试设备切换到频率计数功能&#xA;2、晶振在连续运行过程中，取样时间大于10s，每间隔12小时测量一组数据，每组数据连续取样3次，取算数平均值作为测量数据。&#xA;3、测试七天，取15组数据。" TextWrapping="Wrap"
                                 HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"/>
                    </GroupBox>
                    <GroupBox Grid.Column="1" Header="测试数据记录">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="50" />
                            </Grid.RowDefinitions>
                            <DataGrid Name="dataGridBurnInRate" Grid.Row="0" ItemsSource="{Binding LstBurnInRateParam}" AutoGenerateColumns="False">
                                <DataGrid.ContextMenu>
                                    <ContextMenu Name="dgMenuBurnInRate" StaysOpen="true">
                                        <MenuItem Name="ItmBurnInRateRemove" Header="删除" Click="ItmBurnInRateRemove_Click"/>
                                    </ContextMenu>
                                </DataGrid.ContextMenu>
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="记录时间" Width="*" Binding="{Binding Now, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True"/>
                                    <DataGridTextColumn Header="测试次数" Width="*" Binding="{Binding Count, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True"/>
                                    <DataGridTextColumn Header="输出频率" Width="*" Binding="{Binding Frequency, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True"/>
                                </DataGrid.Columns>
                            </DataGrid>
                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="100" />
                                    <ColumnDefinition Width="100" />
                                </Grid.ColumnDefinitions>
                                <Button x:Name="BtnCalculate2" Grid.Column="0" Content="计算结果" Width="80" Height="30" 
                                        HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,10,10,10" Click="BtnCalculate2_Click"/>
                                <Button x:Name="BtnRunApp8" Grid.Column="2" Content="运行测试程序" Width="80" Height="30" 
                                        HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,10,10,10" />
                                <Button x:Name="BtnAddRecord8" Grid.Column="3" Content="添加测试记录" Width="80" Height="30" 
                                        HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,10,10,10" Click="BtnAddRecord8_Click"/>
                            </Grid>
                        </Grid>
                    </GroupBox>
                </Grid>
            </TabItem>
            <TabItem x:Name="TabPage9" Header="时间间隔">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="160" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <GroupBox Grid.Column="0" Header="测试方法">
                        <TextBox Text="测试方法&#xA;1、TDC-GP21为时间间隔测量模块，TDC-GP21是USB接口，使用软件进行参数配置。&#xA;2、用户手动输入测量数据。" TextWrapping="Wrap"
                                 HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"/>
