<Window x:Class="ScreenCut.OprationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ScreenCut"
        WindowStyle="None"
        mc:Ignorable="d" Height="30" Width="60" Margin="0" BorderThickness="0" ResizeMode="NoResize" Background="{DynamicResource {x:Static SystemColors.ActiveCaptionBrushKey}}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30"/>
            <ColumnDefinition Width="30"/>
        </Grid.ColumnDefinitions>
        <Button Name="cansel" Grid.Column="0" Click="cansel_Click">取消</Button>
        <Button Name="OK" Grid.Column="1" Click="OK_Click">确定</Button>
    </Grid>
</Window>
